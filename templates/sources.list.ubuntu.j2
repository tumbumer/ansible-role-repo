# Main
deb http://{{ tumbumer_soft_mirror }}archive.ubuntu.com/ubuntu/ {{ ansible_distribution_release }} main restricted
deb http://{{ tumbumer_soft_mirror }}archive.ubuntu.com/ubuntu/ {{ ansible_distribution_release }}-updates main restricted

# Universe
deb http://{{ tumbumer_soft_mirror }}archive.ubuntu.com/ubuntu/ {{ ansible_distribution_release }} universe
deb http://{{ tumbumer_soft_mirror }}archive.ubuntu.com/ubuntu/ {{ ansible_distribution_release }}-updates universe

# Multiverse
deb http://{{ tumbumer_soft_mirror }}archive.ubuntu.com/ubuntu/ {{ ansible_distribution_release }} multiverse
deb http://{{ tumbumer_soft_mirror }}archive.ubuntu.com/ubuntu/ {{ ansible_distribution_release }}-updates multiverse

# Backports
deb http://{{ tumbumer_soft_mirror }}archive.ubuntu.com/ubuntu/ {{ ansible_distribution_release }}-backports main restricted universe multiverse

# Security updates
deb http://security.ubuntu.com/ubuntu {{ ansible_distribution_release }}-security main restricted
deb http://security.ubuntu.com/ubuntu {{ ansible_distribution_release }}-security universe
deb http://security.ubuntu.com/ubuntu {{ ansible_distribution_release }}-security multiverse
